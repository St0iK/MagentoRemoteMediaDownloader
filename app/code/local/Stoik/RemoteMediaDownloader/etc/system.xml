<?xml version="1.0"?>
<config>
    <tabs>
        <stoikall translate="label" module="Remotemediadownloader">
            <label>Storage Media settings</label>
            <sort_order>400</sort_order>
        </stoikall>
    </tabs>
    <sections>
        <Remotemediadownloader module="Remotemediadownloader">
            <label>Remote Media Downloader</label>
            <tab>stoikall</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <option translate="label">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <origin translate="label">
                            <label>Remote URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Provide the url that will be used to download the images from ex. http://www.myawesomemagentoshop.com]]></comment>
                        </origin>
                        <dropdown translate="label comment">
                           <label>Dropdown</label>
                           <comment>Download method</comment>
                           <frontend_type>select</frontend_type>
                           <source_model>Stoik_Remotemediadownloader_Model_System_Config_Source_Dropdown_Values</source_model>
                           <sort_order>30</sort_order>
                           <show_in_default>1</show_in_default>
                           <show_in_website>1</show_in_website>
                           <show_in_store>1</show_in_store>
                           <comment><![CDATA[Select the method for downloading the media.]]></comment>
                       </dropdown>
                    </fields>
                </option>
            </groups>
        </Remotemediadownloader>
    </sections>
</config>