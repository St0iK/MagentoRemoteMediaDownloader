<?xml version="1.0"?>
<config>
    <modules>
        <Stoik_Remotemediadownloader>
            <version>0.2.0</version>
        </Stoik_Remotemediadownloader>
    </modules>
    <global>
        <models>
            <catalog>
                <rewrite>
                    <product_image>Stoik_Remotemediadownloader_Model_Product_Image</product_image>
                </rewrite>
            </catalog>
        </models>
        <blocks>
            <Remotemediadownloader>
                <class>Stoik_Remotemediadownloader_Block</class>
            </Remotemediadownloader>
        </blocks>
        <helpers>
            <Remotemediadownloader>
                <class>Stoik_Remotemediadownloader_Helper</class>
            </Remotemediadownloader>
        </helpers>
		<events>
			<core_block_abstract_to_html_after>
				<observers>
					<stoik_Remotemediadownloader_core_block_abstract_to_html_after>
						<class>Stoik_Remotemediadownloader_Model_Observer</class>
						<method>Remotemediadownloader</method>
					</stoik_Remotemediadownloader_core_block_abstract_to_html_after>
				</observers>
			</core_block_abstract_to_html_after>
		</events>
    </global>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <stoikinfo>
											<title>Stoik - All</title>
										</stoikinfo>
                                        <Remotemediadownloader>
                                            <title>Stage File Proxy</title>
                                        </Remotemediadownloader>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <Remotemediadownloader>
            <option>
                <active>1</active>
                <code>magento</code>
            </option>
            <dropdown>php_curl</dropdown>
        </Remotemediadownloader>
    </default>
</config>